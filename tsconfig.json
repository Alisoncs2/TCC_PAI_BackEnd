{
    "compilerOptions": {
      "skipLibCheck": true,
      "target": "es6",
      "module": "es2015",
      "moduleResolution": "node",
      "allowJs": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "outDir": "./build",
      "rootDir": "src",
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  